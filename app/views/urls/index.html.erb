<div id="particles-js">
  <% provide(:title, 'All URLs') %>
  <div class="margin-top">
    <h1 class='text-primary'>List of URLs</h1>
  </div>

  <%= will_paginate %>

  <div class="table-responsive urls">
    <table class="table table-hover table-bordered">
      <thead>
        <tr>
          <th class="col-xs-4 text-primary"><center><p>Original URL</p></center></th>
          <th class="col-xs-4 text-primary"><center><p>Short URL</p></center></th>
          <th class="col-xs-4 text-primary"><center><p>Actions</p></center></th>
        </tr>
      </thead>
    <%= render @urls %>
    </table>
  </div>

  <%= will_paginate %>
</div>
