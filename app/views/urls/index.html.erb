<div id='particles-js'>
  <% provide(:title, 'All URLs') %>
  <div class='margin-top'>
    <h1 class='text-primary'>List of URLs</h1>
  </div>

  <%= will_paginate %>

  <div class='table-responsive urls'>
    <table class='table table-hover table-bordered'>
      <thead>
        <tr>
          <th class='col-xs-7 text-primary center'><p>Original URL</p></th>
          <th class='col-xs-3 text-primary center'><p>Short URL</p></th>
          <th class='col-xs-2 text-primary center'><p>Actions</p></th>
        </tr>
      </thead>
    <%= render @urls %>
    </table>
  </div>
</div>
